<div class = "container">

  <div class = "row">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="page-header"> <!-- header -->
        <h1> New event </h1>
      </div>
    </div> <!-- col -->
  </div> <!-- row -->

    <div class = "row">
      <div class="col-lg-10 col-lg-offset-1">
        <div class = "row"> <!-- event edit form -->
          <div class="col-xs-12">
            <%= simple_form_for @event do |f| %>
              <%= f.input :name %>
              <div class = "row">
                <div class="col-sm-6">
                  <%= f.label :start %>
                  <%= f.date_field :start, discard_second: true, class: "text-center" %>
                  <%= f.time_field :start, class: "text-center" %>
                </div>
                <div class="col-sm-6">
                  <%= f.label :end %>
                  <%= f.date_field :end, class: "text-center" %>
                  <%= f.time_field :end, class: "text-center" %>
                </div>
              </div>
              <%= f.input :address %>
              <%= f.input :comment %>
              <%= f.button :submit%>
            <% end %>
          </div>
        </div>
      </div>
    </div> <!-- col -->
  </div> <!-- row -->
</div> <!-- container -->
