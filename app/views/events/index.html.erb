<div class = "container">

  <div class = "row">
    <div class="col-md-8 col-md-offset-2">
      <div class="page-header">
        <h1> My Events </h1>
      </div>
    </div> <!-- col -->
  </div> <!-- row -->

  <div class = "row">
    <div class="col-md-8 col-md-offset-2">
      <ul class="list-group event-list">
        <% @events.each do |event| %>
          <li class="list-group-item"> <%= link_to event.name, event_path(event) %> </li>
        <% end %>
      </ul>
    </div> <!-- col -->
  </div> <!-- row -->
</div> <!-- container -->
