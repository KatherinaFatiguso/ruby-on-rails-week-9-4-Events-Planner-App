<div class = "row"> <!-- row -->
  <div class="col-lg-10 col-lg-offset-1"> <!-- col -->
    <div class = "row"> <!-- event edit form -->
      <div class="col-xs-12">
        <%= simple_form_for @event do |f| %>
          <%= f.input :name %>
          <div class = "date-form-inputs">
            <%= f.label :start %>
            <%= f.date_field :start, class: "form-control" %>
            <%= f.time_field :start, class: "form-control" %>
            </br>
            <%= f.label :end %>
            <%= f.date_field :end, class: "form-control" %>
            <%= f.time_field :end, class: "form-control" %>
          </div>
          </br>
          <%= f.input :address %>
          <%= f.input :comment %>
          <%= f.button :submit, class: "btn-success"%>
        <% end %>
      </div> <!-- col -->
    </div> <!-- row -->
